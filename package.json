{
  "name": "@andcreations/developer-guide",
  "version": "0.1.1",
  "description": "Serves documentation from markdown files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist && rm -rf node_modules",
    "rebuild": "rm -rf dist && npm run build",
    "test": "jest"
  },
  "author": "AndCreations",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "typescript": "^4.0.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.11.5",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5"
  },
  "jest": {
    "rootDir": "src",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    }
  }
}
